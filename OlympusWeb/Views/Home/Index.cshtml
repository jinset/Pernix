@{
    ViewBag.Title = "OlympusWeb";
}

<div id="myCarousel" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img class="imgrelative" src="~/Content/images/inversionistaBg.jpg" alt="Slide1">
            <img class="imgabsolute" src="~/Content/images/inversionistaPic.png" alt="Slidebg">
            <div class="carousel-caption">
                <h1>Inversionista</h1>
                <h2>Confidencialidad asegurada</h2>
            </div>
        </div>
        <div class="item">
            <img class="imgrelative" src="~/Content/images/agenteBg.jpg" alt="Slide2">
            <img class="imgabsolute" src="~/Content/images/agentePic.png" alt="Slidebg">
            <div class="carousel-caption">
                <h1>Agente</h1>
                <h2>Comisión garantizada</h2>
            </div>
        </div>
        <div class="item">
            <img class="imgrelative" src="~/Content/images/clienteBg.jpg" alt="Slide3">
            <img class="imgabsolute" src="~/Content/images/clientePic.png" alt="Slidebg">
            <div class="carousel-caption">
                <h1>Cliente</h1>
                <h2>Trámite ágil</h2>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="icon-prev"></span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="icon-next"></span>
    </a>
</div>
<section class="contpadding bgtitulo">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <img src="~/Content/images/logoCentral.png" alt="">
                <h2>Solución para todo tipo de persona</h2>
            </div>
        </div>
    </div>
</section>

<section class="bgbodyindex">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 videoSection">
                <div class="col-md-4 col-xs-12">
                    <a id="video1" data-toggle="modal" data-target=".bs-modal-lg-1"><img class="center-block pull-right-xs cuadro" src="~/Content/images/serv1.jpg"></a>
                    <h2 class="text-central">@Html.ActionLink("Inversionista", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</h2>
                </div>
                <div class="col-md-4 col-xs-12">
                    <img class="center-block pull-right-xs cuadro" src="~/Content/images/serv1.jpg">
                    <h2 class="text-central">@Html.ActionLink("Agente", "Create", "Agente")</h2>

                </div>
                <div class="col-md-4 col-xs-12">
                    <img class="center-block pull-right-xs cuadro" src="~/Content/images/serv1.jpg">
                    <h2 class="text-central">@Html.ActionLink("Cliente", "Create", "Hipoteca")</h2>

                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade bs-modal-lg-1" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" id="inversionistaModal">
        <div class="modal-content">
            <!-- <div class="modal-header"> -->
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            <!-- </div> -->
            <!-- <div class="modal-body"> -->
            <div class="js-video [vimeo, widescreen]">
                <iframe width="560" height="315" frameborder="0" allowfullscreen=""></iframe>
                <!-- </div> -->
            </div>
        </div>
    </div>
</div>